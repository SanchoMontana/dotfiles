backend = "glx";
vsync = true;

shadow = true;
shadow-radius = 12;
shadow-offset-x = -12;
shadow-offset-y = -12;

corner-radius = 10;

fading = true;
fade-in-step = 0.05;
fade-out-step = 0.05;

inactive-opacity = 0.9;
active-opacity = 1.0;

opacity-rule = [
  "90:class_g = 'Alacritty'"
];

blur-method = "dual_kawase";
blur-strength = 7;

